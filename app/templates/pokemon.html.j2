{% extends 'base.html.j2' %}
{% block title %}
Your Pokemon Team is:
{% endblock %}

{% block content %}
    <h1></h1>
    <form action="{{url_for('site.pokemon')}}" method="post">
    {{form.hidden_tag()}}
        <div>
        {{form.name.label(class="form-label")}}
        {{form.name(class="form-control")}}
        {%for error in form.name.errors %}
            <small style='color:blue;'>That Pokemon was Excommunicated from Reality</small>
        {%endfor%}
        {{form.submit(class="btn btn-primary form-control")}}
        </div>
    </form>
    
    {% if team %}
        {% for poke in pokemen %}
            {# To display my pokemon: #}
            {% include '/card.html.j2'%}
            
        {% endfor %}
    {% endif %}
    
    {% if poke %}
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Order</th>
                    <th scope="col">Ability</th>
                    <th scope="col">Base experience</th>
                    <th scope="col">Front Shiny</th>
                    <th scope="col">Stat 1 Name</th>
                    <th scope="col">Stat 1 Rating</th>
                    <th scope="col">Stat 2 Name</th>
                    <th scope="col">Stat 2 Rating</th>
                    <th scope="col">Stat 3 Name</th>
                    <th scope="col">Stat 3 Rating</th>
                    {# add health #}
                    
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">{{poke.name}}</th>
                    <td>{{poke.order}}</td>
                    <td>{{poke.ability}}</td>
                    <td>{{poke.base_experience}}</td>
                    <td><img src={{poke.front_shiny}} style="height:150px" style ="tb = 0"</td>
                    <td>{{poke.stat_name1}}</td>
                    <td>{{poke.stat_rating1}}</td>
                    <td>{{poke.stat_name2}}</td>
                    <td>{{poke.stat_rating2}}</td>
                    <td>{{poke.stat_name3}}</td>
                    <td>{{poke.stat_rating3}}</td>                    
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}   
